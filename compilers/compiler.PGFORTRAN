# Set options for the Portland Group (PGI) Fortran compiler.
ifeq ($(FORTRAN_COMPILER),PGFORTRAN)
FC=pgfortran
DEFINES += -DFORTRAN90
DEFINES += -D_ISO_TR_15581_
can_do_F90=false
can_do_F90=true
F90_to_f90=$(FC) -E $(F90FLAGS) $(EXTRA_FFLAGS) $< > $@
MODULES=-module $(MODDIR)
EXTRAS  =
DEBUG_FLAGS = -g -Ktrap=fp -Mbounds
PROF_FLAGS  = -Mprof=func
PROD_FLAGS  = -fast
DEFINES += -DREAL_4B=real\(4\)
endif
